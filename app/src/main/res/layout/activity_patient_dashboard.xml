<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amb.shcs.PatientDashboard"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/yo"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/patWelcome"
            android:text="Welcome !"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="28sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive" />

        <Button
            android:id="@+id/viewAppt"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="View Appointment"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            />

        <Button
            android:id="@+id/patBookAppt"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Book Appointment"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
             />

        <Button
            android:id="@+id/patCancelAppt"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Cancel Appointment"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            />

<!--        <Button
            android:id="@+id/billPaymentBtn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Bill Information"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            />
-->

        <Button
            android:id="@+id/insuranceInfoBtn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Insurance Information"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            />

        <Button
            android:id="@+id/logout"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            />

        <Button
            android:id="@+id/changePassword"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>

</ScrollView>

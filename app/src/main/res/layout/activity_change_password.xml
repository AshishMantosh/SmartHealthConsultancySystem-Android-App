<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amb.shcs.ChangePassword">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/yo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_below="@id/logo"
        android:id="@+id/patWelcome"
        android:text="Change Password"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="28sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/newPass1"
        android:hint="Enter New Password"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_below="@id/patWelcome"/>

    <EditText
        android:id="@+id/newPass2"
        android:hint="Confirm New Password"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/newPass1"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/oldPass"
        android:hint="Enter Old Password"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/newPass2"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/changeBtn"
        android:text="Change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/oldPass"
        android:layout_marginTop="40dp"/>

</RelativeLayout>
